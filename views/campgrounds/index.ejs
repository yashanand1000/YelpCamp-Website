<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
				<h1>
			Welcome to the Yelp Camp!!
		</h1>
		<p>
			View our handpicked campgrounds from all over the world..
		</p>
		<p>
			<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
		</p>
		</div>	
	</header>
	
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
	<%campgrounds.forEach(function(ground){ %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
			<img src="<%=ground.image%>">
			<div class=caption>
			<h4>
			<%=ground.name%>
			</h4>
			</div>
			<p>
				<a class="btn btn-primary" href="/campgrounds/<%=ground._id%>" > More Info </a>
			</p>
		</div>

</div>
<% }) %>
</div>
	</div>	

<%- include("../partials/footer") %>
